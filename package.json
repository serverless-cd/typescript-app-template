{
  "name": "@serverless-cd/ts-app",
  "version": "0.0.3",
  "description": "TypeScript template app",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsc --watch",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serverless-cd/typescript-app-template.git"
  },
  "keywords": [
    "serverless-cd",
    "node",
    "typescript"
  ],
  "author": "heimanba",
  "license": "MIT",
  "dependencies": {
    "@serverless-cd/core": "^0.0.1-alpha.12"
  },
  "devDependencies": {
    "@types/node": "^18.7.6",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.0.1",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^26.8.3",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  },
  "inputs": {
    "milliseconds": {
      "required": true,
      "description": "input description here",
      "default": "default value if applicable"
    }
  }
}
